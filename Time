var today = new Date();
var hournow = today.getHours();
var greeting;

if (hournow > 18) {
    greeting ='Guten Abend!';
}else if (hournow > 12){
    greeting ='Guten Tag!';
}else if (hournow > 0) {
    greeting ='Guten Morgen!';
}else{
    greeting ='Willkommen!';
}

document.write('<h3>' + greeting + '</h3>');
